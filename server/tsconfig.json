{
    "compilerOptions": {
        "rootDir": "./src",
        "module": "ESNext",
        "target": "ESNext",
        "outDir": "./dist",
        "moduleResolution": "node",
        "lib": ["ESNext"],
        "paths": {
            "@/*": ["./src/*"]
        },
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["./@types/", "./node_modules/@types/"],
        "skipLibCheck": true,
        "allowJs": true
    },
    "include": ["src/**/*.ts"]
}
